{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
